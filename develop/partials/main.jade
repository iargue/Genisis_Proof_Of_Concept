			div.footer
				ul.footer-nav
					li
						a(href="./About") About 
					li
						a(href="./Merchandise") Merchandise 
					li
						a(href="./ReferAFriend") Refer A Friend 
					li
						a(href="./Support") Support 

		section#GD-Login.hide
			table
				tbody
					tr
						th Siege Login
					tr 
						td 
							label Username
						td
							input(type="text")
					tr 
						td
							label Password
						td
							input(type="password")
					tr 
						td
							a(href="./Forgot") Forgot Username or Password?
					tr
						td
							button Log In

		section#GD-Register.page-wrap.hide


		section#GD-Profile.page-wrap.hide

		section#GD-About.page-wrap.hide

		section#GD-Game-Guide.page-wrap.hide

		section#GD-Forum.page-wrap.hide

		section#GD-Shop.page-wrap.hide 

		section#GD-Support.page-wrap.hide
			