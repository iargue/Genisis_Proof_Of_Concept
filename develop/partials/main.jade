doctype html

html(id="data-ng-app", data-ng-app="siteApp")
	head
		meta(charset="utf-8")
		title The Game of Defense The Site
		script(type="text/javascript", src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.11/angular.min.js")
		script(type="text/javascript", src="js/site.js")
		link(rel="stylesheet", href="style/main.css")
	body(data-ng-controller="siteCtrl")
		div.service.page-wrap
			div
				input(type="search", results=5, placeholder="Explore Site...")
			div
				a(href="./bin/game.html")
					button.offline Play Now!
			div
				ul(data-ng-hide="session.loggedIn")
					li
						a(href="?login", onclick="session.login") Login
					li
						a(href="./Register") Register
				ul(data-ng-show="session.loggedIn").hide
					li
						a(href="./Profile") {{session.user.userName}}
					li
						a(href="?logout", onclick="session.logout") Logout
		section#GD-Site.page-wrap
			header
				img.content-header(src="assets/site-images/ok.png", alt="poop")
				nav
					a(href="./bin/game-guide.html")
						button.guide Game Guide
					a(href="./bin/forum.html")
						button.forums Forums
					a(href="./bin/shop.html")
						button.shop Shop

			div.content 
				div.news-item 
					img(src="assets/site-images/simple.svg").news-image
					div.news-info
						a(href="newspageQuery")
							h1 NEWS TITLE
